<?xml version="1.0" encoding="utf-8" ?>
<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Import Project="..\Common.vars"/>

  <PropertyGroup>
    <BuildConfiguration>Debug</BuildConfiguration>
    <BuildMode>Full</BuildMode>
    <SettingsSuffix></SettingsSuffix>
    <DeployDir Condition="'$(DeployDir)' == ''">C:\dir1</DeployDir>
    <ServiceMode>FromDeploy</ServiceMode>
    <FrontEndMode>FromDeploy</FrontEndMode>
    <ServiceRunMode>Run</ServiceRunMode>

    <GlobalServices Condition="'$(GlobalServices)' == ''">Cassandra</GlobalServices>
  </PropertyGroup>

  <PropertyGroup>
    <TestSolutionDir>$(CatalogueRootDirectory)\CassandraPrimitives\</TestSolutionDir>
    <BuildSolutionsMSBuildFile>$(MSBuildThisFileDirectory)\..\..\Build.xml</BuildSolutionsMSBuildFile>    
  </PropertyGroup>

  <ItemGroup>
    <NUnitAssemblies Include="$(TestSolutionDir)\FunctionalTests\bin\$(BuildConfiguration)\Catalogue.CassandraPrimitives.FunctionalTests.dll"></NUnitAssemblies>
  </ItemGroup>

  <Import Project="..\..\..\..\MSBuild\DeployTargets\Targets\Test_New.targets" />
  
</Project>